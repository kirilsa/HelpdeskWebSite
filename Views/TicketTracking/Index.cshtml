@model IEnumerable<HelpDeskWebSite.Models.Conversation>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsersConversation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsersConversation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConversationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConversationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConversationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
